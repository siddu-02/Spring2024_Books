@model IEnumerable<Order>

<div class="card shadow border-1 my-4">
    <div class="card-header py-2">
        <h1>Order List</h1>
    </div>

    <div class="card-body p-4">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Order Id</th>
                    <th>Order Date</th>
                    <th>Customer Name</th>
                    <th>Order Total</th>
                    <th>Order Status</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var eachorder in Model)
                {
                    <tr>
                        <td>@eachorder.OrderId</td>
                        <td>@eachorder.OrderDate.ToString("MM/dd/yyyy")</td>
                        <td>@eachorder.CustomerName</td>
                        <td>@eachorder.OrderTotal.ToString("C")</td>
                        <td>@eachorder.OrderStatus</td>
                        <td>@eachorder.ApplicationUser.Email</td>
                        <td>@eachorder.Phone</td>
                        <td>
                            <a asp-controller="Order" asp-action="Details" asp-route-id="@eachorder.OrderId">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
