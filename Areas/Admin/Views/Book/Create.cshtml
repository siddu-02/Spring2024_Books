@model BookwithCategoriesVM

<h1>Add New Book</h1>

<div class="col-md-10">
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="form-group p-2">
            <label asp-for="Book.BookTitle" class="control-label">Book Title</label>
            <input asp-for="Book.BookTitle" class="form-control" />
            <span asp-validation-for="Book.BookTitle" class="text-danger"></span>
            <br />

            <label asp-for="Book.Author" class="control-label">Author</label>
            <input asp-for="Book.Author" class="form-control" />
            <span asp-validation-for="Book.Author" class="text-danger"></span>
            <br />

            <label asp-for="Book.Description" class="control-label">Description</label>
            <input asp-for="Book.Description" class="form-control" />
            <span asp-validation-for="Book.Description" class="text-danger"></span>
            <br />

            <label asp-for="Book.ISBN" class="control-label">ISBN</label>
            <input asp-for="Book.ISBN" class="form-control" />
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
            <br />

            <label asp-for="Book.Price" class="control-label">Price</label>
            <input asp-for="Book.Price" class="form-control" />
            <span asp-validation-for="Book.Price" class="text-danger"></span>
            <br />

            <label asp-for="Book.CategoryId" class="control-label">Category ID</label>
            <select asp-for="Book.CategoryId" class="form-control" asp-items="@Model.ListOfCategories">
                <option disabled selected>Select a Category</option>
            </select>
            <span asp-validation-for="Book.CategoryId" class="text-danger"></span>
            <br />

            
            <div class="form-group">
                <label asp-for="Book.ImgUrl" class="control-label"></label>
                <input type="file" name="ImgFile" asp-for="Book.ImgUrl" class="form-control">
            </div>

            <br />
        </div>
        <div class="form-group p-2">
            <input type="submit" class="btn btn-outline-primary col-md-5" />
        </div>
    </form>


<p>
    <a asp-controller="Book" asp-action="Index">Back to List</a>
</p>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
</div>